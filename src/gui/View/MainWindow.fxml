<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="390.0" prefWidth="590.0" styleClass="root" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller.MainController">

    <stylesheets>
        <URL value="@CSS/Style.css" />
    </stylesheets>


    <children>
        <VBox layoutX="176.0" layoutY="22.0" prefHeight="346.0" prefWidth="238.0" style="-fx-alignment: center; -fx-background-radius: 25;" styleClass="">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <!--
                           To use SceneBuilder add: "@../../../Resources" to the front of the url otherwise the application will freak out :)
                        -->
                        <Image url="@/Images/Logo.png" />
                    </image>
                </ImageView>


                <Label alignment="CENTER" prefHeight="19.0" prefWidth="43.0" style="-fx-font-size: 15px" text="Login">
                </Label>
                <Label fx:id="loginWrongLabel" prefHeight="34.0" prefWidth="204.0" text="Your username or password does not exist" textAlignment="CENTER" textFill="#C12121" textOverrun="WORD_ELLIPSIS" visible="false" wrapText="true" />
                <TextField fx:id="username" promptText="Username">
                    <VBox.margin>
                        <Insets bottom="7.0" top="2.0" />
                    </VBox.margin>
                    <styleClass>
                    </styleClass>
                </TextField>

                <PasswordField fx:id="password" promptText="Password">
                    <VBox.margin>
                        <Insets bottom="11.0" top="16.0" />
                    </VBox.margin>
                    <styleClass>

                    </styleClass>
                </PasswordField>
                <Button fx:id="SubmitButton" mnemonicParsing="false" onAction="#submitLogin" text="Submit" textFill="#FAFAFA">
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
