         </children>
      </VBox>
      <VBox GridPane.columnIndex="1">
         <children>
            <Label text="Select a type of ticket" />
            <TableView fx:id="tableTicket" prefHeight="229.0" prefWidth="206.0">
              <columns>
                <TableColumn fx:id="columnTicketType" prefWidth="83.19999998807907" text="Ticket Type" />
