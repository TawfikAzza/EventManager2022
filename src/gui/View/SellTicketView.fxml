   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <VBox>
         <children>
            <Label text="Select an event" />
            <TableView fx:id="tableEvent" onMouseClicked="#displayTicketType" prefHeight="228.0" prefWidth="203.0">
              <columns>
                <TableColumn fx:id="columnNameEvent" prefWidth="100.800048828125" text="Name Event" />
