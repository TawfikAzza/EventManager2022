<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<BorderPane fx:id="topPane" prefHeight="619.0" prefWidth="103.0" styleClass="anchor02"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.Controller.RootLayoutEvenController">
    <stylesheets>
        <URL value="@../CSS/Style.css"/>
    </stylesheets>
    <left>
        <VBox prefHeight="619.0" prefWidth="122.0" styleClass="anchor02" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnAdd" contentDisplay="TOP" mnemonicParsing="false" onAction="#addEvent"
                        prefHeight="102.0" prefWidth="102.0" text="Add an Event">
                    <graphic>
                        <ImageView fitHeight="51.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/Images/addevent.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#manageEvent" prefHeight="102.0"
                        prefWidth="105.0" text="Manage Events">
                    <graphic>
                        <ImageView fitHeight="56.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/Images/managelogo01.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="System Bold" size="11.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#manageParticipants" prefHeight="107.0"
                        prefWidth="105.0" text="Participants">
                    <graphic>
                        <ImageView fitHeight="69.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/Images/participants.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="10.0"/>
                    </VBox.margin>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#sellTicket" prefHeight="106.0"
                        prefWidth="110.0" text="Sell a Ticket">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="10.0"/>
                    </VBox.margin>
                    <graphic>
                        <ImageView fitHeight="81.0" fitWidth="67.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/Images/sell_ticket.jpg"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Button>
            </children>
        </VBox>
    </left>
</BorderPane>
