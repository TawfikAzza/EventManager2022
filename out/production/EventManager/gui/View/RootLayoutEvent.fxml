<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="topPane" prefHeight="602.0" prefWidth="116.0" styleClass="anchor" stylesheets="@CSS/Style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Controller.RootLayoutEvenController">
    <left>
        <VBox prefHeight="347.0" prefWidth="106.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnAdd" contentDisplay="TOP" mnemonicParsing="false" onAction="#addEvent" prefHeight="102.0" prefWidth="102.0" style="-fx-background-radius: 100;" text="Add an Event">
               <graphic>
                  <ImageView fitHeight="51.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/Images/addevent.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin></Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#manageEvent" prefHeight="102.0" prefWidth="105.0" style="-fx-background-radius: 100;" text="Manage Events">
               <graphic>
                  <ImageView fitHeight="56.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/Images/managelogo01.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Bold" size="11.0" />
               </font>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin></Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#manageParticipants" prefHeight="107.0" prefWidth="105.0" style="-fx-background-radius: 100;" text="Participants">
               <graphic>
                  <ImageView fitHeight="69.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@/Images/participants.png" />
                     </image>
                  </ImageView>
               </graphic>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin></Button>
            </children>
        </VBox>
    </left>
</BorderPane>
